<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:background="@drawable/keyboard_background_holo"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <LinearLayout
            android:id="@+id/beeps_tab"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:layout_alignParentTop="true"
            android:orientation="horizontal">
        <ImageButton
                android:background="@null"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="center"                
                android:id="@+id/beeps_tab_0_recents"
                android:src="@drawable/beepgrid_selector_fav"/>
        <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="#888888"/>
        <ImageButton
                android:background="@null"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="center"
                android:id="@+id/beeps_tab_1_people"
                android:src="@drawable/beepgrid_selector_1"/>
        <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="#888888"/>
        <ImageButton
                android:background="@null"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="center"
                android:id="@+id/beeps_tab_2_nature"
                android:src="@drawable/beepgrid_selector_2"/>
        <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="#888888"/>
        <ImageButton
                android:background="@null"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="center"
                android:id="@+id/beeps_tab_3_objects"
                android:src="@drawable/beepgrid_selector_3"/>
        <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="#888888"/>
        <ImageButton
                android:background="@null"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="center"
                android:id="@+id/beeps_tab_4_cars"
                android:src="@drawable/beepgrid_selector_4"/>
        <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="#888888"/>
        <ImageButton
                android:background="@null"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="center"
                android:id="@+id/beeps_tab_5_punctuation"
                android:src="@drawable/beepgrid_selector_5"/>
        <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="#888888"/>
        <ImageButton
                android:background="@null"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/beeps_refresh"
                android:src="@drawable/beepgrid_selector_refresh"/>
    </LinearLayout>
    <android.support.v4.view.ViewPager
        android:layout_below="@id/beeps_tab"
        android:id="@+id/beeps_pager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="0dip"
        android:layout_margin="0dip"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/beeps_tab"
        android:background="#8f8f8f"/>
    <ProgressBar 
       android:id="@+id/beepslist_loading"
       android:layout_width="40dip"
       android:layout_height="190dip" 
       android:indeterminate="true"
       android:layout_centerHorizontal="true"
       android:layout_alignParentBottom="true"
       android:visibility="gone" />
</RelativeLayout>
