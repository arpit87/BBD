<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
<RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/square_rectangle_gray_with_backgroundshadow"      
    android:padding="10dip"
    android:layout_marginLeft="20dip"
    android:layout_marginRight="20dip"
    android:layout_marginTop="10dip"
    android:layout_marginBottom="10dip"
    >
 <LinearLayout
     android:id="@+id/mybeep_row_llayout" 
     android:layout_height="wrap_content"
     android:layout_width="match_parent"
     android:orientation="horizontal"
    android:gravity="center" 
    
    android:layout_margin="2dip"
    
     >   
     
     <TextView 
    android:id="@+id/mybeep_row_text"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"   
    android:text="Bhak  asdfsf  "
    android:padding="20dip"
    android:maxWidth="180dip"
    android:textSize="20sp"
    android:typeface="serif"
    android:textStyle="bold"
    android:gravity="center"
  
   />
     
<ImageView
    android:id="@+id/mybeep_row_img" 
    android:layout_width="100dip"
    android:layout_height="100dip" 
    
    android:src="@drawable/loading"
    android:padding="10dip"
    android:scaleType="fitCenter"
    
    />  

</LinearLayout>	
<View 
    android:id="@+id/mybeep_row_separator"
    android:layout_height="2dip"
    android:layout_width="match_parent"
    android:background="@color/light_gray"
    android:layout_below="@id/mybeep_row_llayout"
    ></View>
<ImageView
    android:id="@+id/mybeep_row_likeimg"
	android:layout_width="20dip" android:layout_height="20dip"		
			
	android:textColor="@color/gray" 
	android:gravity="right"
	android:layout_below="@id/mybeep_row_separator"
	android:src="@drawable/like_pressed"
	android:layout_marginLeft="5dip"
	android:layout_alignParentLeft="true"
	
	android:padding="2dip"
	android:scaleType="fitCenter"
	/>		
	
<TextView
    android:id="@+id/mybeep_row_numlike"
	android:layout_width="wrap_content" android:layout_height="wrap_content"		
	android:autoLink="none"
	android:text="235"		
	android:textColor="@color/gray" 
	android:gravity="right"
	android:textSize="15sp"
	android:textStyle="bold"
	android:layout_marginLeft="3dip"	
	android:layout_toRightOf="@id/mybeep_row_likeimg"
	android:layout_alignBottom="@id/mybeep_row_likeimg"
	/>

<ImageView
    android:id="@+id/mybeep_row_rebeepimg"
	android:layout_width="20dip" android:layout_height="20dip"		
			
	android:textColor="@color/gray" 
	android:gravity="right"
	
	android:src="@drawable/rebeep"
	android:layout_marginLeft="10dip"
	
	android:layout_toRightOf="@id/mybeep_row_numlike"
	android:layout_alignBottom="@id/mybeep_row_numlike"
	android:padding="2dip"
	android:scaleType="fitCenter"
	/>		
	
<TextView
    android:id="@+id/mybeep_row_numrebeep"
	android:layout_width="wrap_content" android:layout_height="wrap_content"		
	android:autoLink="none"
	android:text="23"		
	android:textColor="@color/gray" 
	android:gravity="right"
	android:textSize="15sp"
	android:textStyle="bold"
	android:layout_marginLeft="3dip"	
	android:layout_toRightOf="@id/mybeep_row_rebeepimg"
	android:layout_alignBottom="@id/mybeep_row_rebeepimg"
	/>
</RelativeLayout>
</LinearLayout>