<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"    
    android:orientation="horizontal" >
  
       
  <ImageView
        android:id="@+id/chatlist_image"
        android:layout_width="46dp"
        android:layout_height="46dp"             
        android:layout_margin="5dip"
        android:layout_centerVertical="true" 
        
         /> 
  <TextView android:id="@+id/chatlist_baid"
       android:layout_height="wrap_content"
       android:layout_width="wrap_content"
       android:layout_alignParentRight="true"
       android:layout_alignParentTop="true"
       android:text="1001"
       android:textSize="12sp"
       android:textColor="@color/gray"
       android:layout_marginTop="4dip"
       android:layout_marginRight="4dip"/>
  
  
   <TextView
        android:id="@+id/chatlist_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"       
        android:text="Arpit Mishra"
        android:textColor="#040404"
        android:typeface="sans"
        android:textSize="20dip"
        android:textStyle="bold"
        android:maxLines="1"
        android:layout_marginTop="2dip"
        android:layout_marginLeft="5dip" 
        android:layout_toRightOf="@id/chatlist_image"
        android:layout_toLeftOf="@id/chatlist_baid"       
        />
   
   
                
   <TextView
        android:id="@+id/chatlist_lastchat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hi,how are you"
        android:textColor="#343434"
        android:textSize="15dip"             
        android:maxLines="1"
        android:ellipsize="marquee" 
        
        android:layout_marginLeft="10dip"
        android:layout_marginRight="5dip"        
        android:layout_below="@id/chatlist_name" 
        android:layout_toRightOf="@id/chatlist_image"/>
 
 </RelativeLayout>