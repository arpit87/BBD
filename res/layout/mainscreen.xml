<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:orientation="vertical"
   >
   

<LinearLayout android:orientation="horizontal"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:background="@color/bbd_red"  
                               
            >     
               
        <ImageButton android:id="@+id/mainscreen_bdd"
            android:layout_width="0dip"
            android:layout_weight="1" android:layout_height="60dip"            
            android:paddingTop="10dip"
            android:paddingBottom="10dip"
            android:background="@drawable/tab_selector"  
            android:src="@drawable/new_bbd_white"
             android:scaleType="fitCenter"         
       >
        </ImageButton>
        <View android:layout_height="30dip"
            android:layout_width="1dip"
            android:layout_gravity="center_vertical"
            android:background="@color/white"
          >
            
        </View>
        <ImageButton android:id="@+id/mainscreen_trends"
             android:layout_height="60dip"
             android:layout_width="0dip"
            android:layout_weight="1"
             android:paddingTop="15dip"
            android:paddingBottom="15dip"
            android:background="@drawable/tab_selector"  
            android:src="@drawable/ic_trend_white_solid"
            android:scaleType="fitCenter"
           >
        </ImageButton>   
         <View android:layout_height="30dip"
            android:layout_width="1dip"
            android:layout_gravity="center_vertical"
            android:background="@color/white"
          >
            
        </View>
        <ImageButton android:id="@+id/mainscreen_settings"
             android:layout_height="60dip"
             android:layout_width="0dip"
            android:layout_weight="1"
             android:paddingTop="15dip"
            android:paddingBottom="15dip"
            android:background="@drawable/tab_selector"  
            android:src="@drawable/ic_settings_white_solid"
            android:scaleType="fitCenter"
           >
        </ImageButton>
            
    </LinearLayout>
   
    <android.support.v4.view.ViewPager
        android:id="@+id/mainscreen_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />        
  </LinearLayout> 

