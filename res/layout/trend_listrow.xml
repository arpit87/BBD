<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
<RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/square_rectangle_gray_with_backgroundshadow"
    android:minHeight="120dip"
    android:layout_margin="10dip">
 <View
     android:id="@+id/trend_listrow_separator" 
     android:layout_height="1dip"
     android:layout_width="match_parent"
     android:layout_marginLeft="10dip"
     android:layout_marginRight="10dip"
     android:paddingTop="2dip"
     android:paddingBottom="2dip"
     android:layout_centerVertical="true"
     android:background="@color/light_gray"/>   

 <TextView
     android:id="@+id/trend_listrow_beeprank" 
     android:layout_height="wrap_content"
     android:layout_width="wrap_content"
     android:textSize="30sp"
     android:textColor="@color/black"
     android:text="#1"
     android:layout_above="@id/trend_listrow_separator"
     android:layout_alignParentLeft="true"
     android:layout_margin="5dip"
     android:textStyle="bold"
     />
 
  <ToggleButton 
     android:id="@+id/trend_listrow_fav"
     android:layout_width="35dip"
     android:layout_height="35dip"
     android:background="@drawable/button_favourite"
     android:layout_alignParentRight="true"
    android:layout_marginTop="15dip"
     android:padding="8dip"
     android:scaleType="fitCenter"
     android:textOn=""
     android:textOff=""
     android:layout_marginRight="10dip"/>
 
  <TextView
     android:id="@+id/trend_listrow_beepstr" 
     android:layout_height="wrap_content"
     android:layout_width="match_parent"
     android:textSize="20sp"
     android:textColor="@color/black"
     android:text="Bhak saale bhosdfa asdf asdf s "     
     android:layout_toRightOf="@id/trend_listrow_beeprank"
     android:layout_toLeftOf="@id/trend_listrow_fav"
     android:maxLines="1"
     android:ellipsize="marquee"
     android:layout_marginLeft="5dip"
     android:layout_marginRight="10dip"
     android:layout_alignTop="@id/trend_listrow_beeprank"
      android:textStyle="bold"/>
  
 <TextView
     android:id="@+id/trend_listrow_beepby" 
     android:layout_height="wrap_content"
     android:layout_width="wrap_content"
     android:textSize="12sp"
     android:textColor="@color/black"
     android:text="by bbd pin 2341"
     android:layout_below="@id/trend_listrow_beepstr"
     android:layout_toRightOf="@id/trend_listrow_beeprank"
     android:layout_marginBottom="5dip"
     android:layout_marginLeft="5dip"/>
 
  <View
     android:id="@+id/trend_listrow_separator2" 
     android:layout_height="40dip"
     android:layout_width="1dip"     
     android:layout_marginTop="4dip"
     android:layout_marginBottom="4dip"
     android:layout_centerHorizontal="true"
     android:background="@color/light_gray"
     android:layout_below="@id/trend_listrow_separator"/> 
  
  <ToggleButton 
     android:id="@+id/trend_listrow_like_button"
     android:layout_width="35dip"
     android:layout_height="35dip"
     
     android:background="@drawable/button_like"
     android:layout_toLeftOf="@id/trend_listrow_separator2"
     android:layout_marginTop="8dip"
     android:padding="8dip"
     android:scaleType="fitCenter"
     android:textOn=""
    
     android:textOff=""
     android:layout_below="@id/trend_listrow_separator"
     android:layout_marginRight="20dip"/>
  
    <TextView
      android:id="@+id/trend_listrow_likes_label"  
      android:layout_height="wrap_content"
      android:layout_width="wrap_content"
      android:text="Likes"
      android:textSize="15sp"
      android:layout_alignTop="@id/trend_listrow_like_button"
      
      android:layout_alignParentLeft="true"
      android:layout_marginLeft="25dip"
      android:textColor="@color/gray"/>
  
    <TextView
        android:id="@+id/trend_listrow_likes_num"
          android:layout_height="wrap_content"
      android:layout_width="wrap_content"
      android:text="23"
      android:textSize="17sp"
     android:layout_below="@id/trend_listrow_likes_label"
     android:layout_alignLeft="@id/trend_listrow_likes_label"
     android:textColor="@color/blue"
      />
  
  <ImageButton 
     android:id="@+id/trend_listrow_rebeep_button"
     android:layout_width="50dip"
     android:layout_height="50dip"
     android:src="@drawable/rebeep"
     android:layout_alignParentRight="true"
     android:layout_below="@id/trend_listrow_separator"
      android:background="@android:color/transparent"
     android:padding="8dip"
     android:scaleType="fitCenter"
     android:layout_marginRight="10dip"
     />
  
    <TextView
      android:id="@+id/trend_listrow_rebeeps_label"  
      android:layout_height="wrap_content"
      android:layout_width="wrap_content"
      android:text="Rebeeps"
      android:textSize="15sp"
      android:layout_alignTop="@id/trend_listrow_rebeep_button"
      android:layout_marginTop="8dip"
      android:layout_toRightOf="@id/trend_listrow_separator2"
      android:layout_marginLeft="20dip"
      android:textColor="@color/gray"/>
  
    <TextView
        android:id="@+id/trend_listrow_rebeep_num" 
        android:layout_height="wrap_content"
      android:layout_width="wrap_content"
      android:text="213"
      android:textSize="17sp"
     android:layout_below="@id/trend_listrow_rebeeps_label"
     android:layout_alignLeft="@id/trend_listrow_rebeeps_label"
     android:textColor="@color/red"
      />
 
  
</RelativeLayout>
</LinearLayout>