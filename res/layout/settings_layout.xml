<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        android:gravity="center_horizontal">
      
    <ImageView android:layout_width="match_parent"
        android:layout_height="200dip"
        android:scaleType="center"
        android:background="@android:color/transparent"
        android:src="@drawable/deerhead"
        android:id="@+id/settings_thumbnail"/>

    <TextView
            android:id="@+id/settings_bba_pin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="2.0dip"
            android:paddingTop="2.0dip"
            android:text="BBA Pin 2657"
            android:textColor="@color/black"
            android:textSize="20dip"
          
            android:gravity="center"
            android:layout_below="@id/settings_thumbnail"/>
    
    <ImageButton android:id="@+id/settings_sharetbbapin"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignBottom="@id/settings_bba_pin"
           android:layout_alignParentRight="true"
          
           android:background="@drawable/borderless_share_button"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/settings_bba_pin"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="5dip"
            android:layout_marginBottom="2dip"
            android:orientation="vertical">
            
     <View  android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="@color/gray"
            />
      
        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
            
                <LinearLayout
                        android:id="@+id/settings_notification_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:clickable="true"
                        android:background="@drawable/borderless_button"
                        android:paddingBottom="2dip">
  					<TextView
                            android:id="@+id/settings_notification_header"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="20dip"
                            android:text="Notifications"
                            android:layout_marginTop="10dip"
                            android:layout_marginLeft="5dip"/>

                    <TextView
                            android:id="@+id/settings_notification_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/gray"
                            android:textSize="15dip"
                            android:text="On"
                            android:layout_marginLeft="5dip"
                            android:layout_marginBottom="10dip"/>

                </LinearLayout>
                
                   <View
                        android:layout_width="match_parent"
                        android:layout_height="1dip"
                        android:background="@color/gray"                        
                        android:layout_marginLeft="5dip"/>
                
                <LinearLayout
                        android:id="@+id/settings_sounds_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:clickable="true"
                        android:background="@drawable/borderless_button"
                        android:paddingBottom="2dip">
  					<TextView
                            android:id="@+id/settings_sounds_header"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="20dip"
                            android:text="Sounds"
                            android:layout_marginTop="10dip"
                            android:layout_marginLeft="5dip"/>

                    <TextView
                            android:id="@+id/settings_sounds_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/gray"
                            android:textSize="15dip"
                            android:text="On"
                            android:layout_marginLeft="5dip"
                            android:layout_marginBottom="10dip"/>

                </LinearLayout>
                
                <View
                        android:layout_width="match_parent"
                        android:layout_height="1dip"
                        android:background="@color/gray"
                        
                        android:layout_marginLeft="5dip"/>
                       
                <LinearLayout
                        android:id="@+id/settings_level_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:clickable="true"
                        android:background="@drawable/borderless_button"
                        android:paddingBottom="2dip">

                    <TextView
                            android:id="@+id/settings_level_header"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="20dip"
                            android:text="Level"
                            android:layout_marginTop="10dip"
                            android:layout_marginLeft="5dip"
                            />

                    <TextView
                            android:id="@+id/settings_level_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/gray"
                            android:textSize="15dip"
                            android:text="3"
                            android:layout_marginLeft="5dip"
                            android:layout_marginBottom="10dip"/>

                </LinearLayout>
                
                
              <!--      <View
                        android:layout_width="match_parent"
                        android:layout_height="1dip"
                        android:background="@color/gray"
                        android:layout_marginTop="2dip"
                        android:layout_marginLeft="5dip"/>
                       
                <LinearLayout
                        android:id="@+id/settings_blockedusers_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:clickable="true"
                        android:background="@drawable/borderless_button">

                    <TextView
                            android:id="@+id/settings_blockedusers_header"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="20dip"
                            android:text="Blocked"
                            android:layout_marginTop="10dip"
                            android:layout_marginLeft="5dip"
                            />

                    <TextView
                            android:id="@+id/settings_blockedusers_desc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/gray"
                            android:textSize="15dip"
                            android:text="Unblock the blocked people"
                            android:layout_marginLeft="5dip"
                            android:layout_marginBottom="10dip"/>

                </LinearLayout>--> 

                <View
                        android:layout_width="match_parent"
                        android:layout_height="1dip"
                        android:background="@color/gray"
                       
                        android:layout_marginLeft="5dip"/>
                
                

                   
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</RelativeLayout>
